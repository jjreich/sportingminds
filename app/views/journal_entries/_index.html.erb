<div class="grid-x">
  <div class="cell large-8 large-offset-2 medium-10 medium-offset-1 small-12">
    <p id="notice"><%= notice %></p>
    <h2>Training Log</h2>
    <% @journal_entries.each do |journal_entry| %>

      <div class="grid-x grid-padding-x">
        <div class="cell large-12">
          <p class="text-left"><b><%= journal_entry.dateTimeOfTraining.strftime ("%m/%d/%y %l:%M%P") %> (<%= journal_entry.duration %> minutes)</b> - <%= journal_entry.trainingAccomplished %> &nbsp

            <%= link_to journal_entry, :class => "", remote: true do %> 
              <%= image_tag("view24.png", width: "12", :alt => "view") %>
            <% end %> &nbsp

            <%= link_to edit_journal_entry_path(journal_entry), :class => "", remote: true do %> 
              <%= image_tag("edit24.png", width: "16", :alt => "edit") %>
            <% end %> &nbsp

            <%= link_to journal_entry, method: :delete, data: { confirm: 'Are you sure?' }, :class => "", remote: true do %> 
              <%= image_tag("trashRecycleBin.png", width: "16", :alt => "trash") %>
            <% end %>
          </p>
        </div>        
      </div>
    <% end %>

    <%= link_to 'New Training Session', new_journal_entry_path, :class => "", remote: true %>
  </div>
</div>

<br>